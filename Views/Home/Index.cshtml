@{
    ViewData["Title"] = "Home Page";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMJ4EAFfh1yPppFDhbjKLfZnBL9A8IbbDAG1fBZ" crossorigin="anonymous">
<style>
    body {
        background-color: #f8f9fa;
        font-family: Arial, sans-serif;
    }

    .hero {
        /* background-color: #343a40; */
        background-image:url("/img/task.jpg");
        background-repeat:no-repeat;
        background-attachment:fixed;
        background-size:100% 100%;
        color: white;
        padding: 50px 0;
        text-align: center;
    }

        .hero h1 {
            font-size: 48px;
            margin-bottom: 20px;
        }

        .hero p {
            font-size: 18px;
            line-height: 1.5;
            margin-bottom: 30px;
        }

    .features {
        padding: 50px 0;
    }

    .feature-card {
        margin-bottom: 20px;
        padding: 20px;
        border-radius: 5px;
        background-color: #fff;
        box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.1);
        text-align: center;
        transition: transform 0.2s;
    }

        .feature-card:hover {
            transform: translateY(-5px);
        }

        .feature-card i {
            font-size: 36px;
            color: #17a2b8;
            margin-bottom: 15px;
        }

        .feature-card p {
            font-size: 16px;
            line-height: 1.5;
            margin-bottom: 0;
        }

    .call-to-action {
        padding: 50px 0;
        text-align: center;
        background-color:dimgray;
    }

    .btn-primary {
        padding: 15px 30px;
        font-size: 18px;
        border-radius: 5px;
    }
</style>

<body>
    <header class="hero">
        <h1 class="display-4" style="text-shadow:5px 5px 4px grey">Task Manager</h1>
        <h4>Organize your tasks and stay productive!</h4>
    </header>

    <section class="features">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="feature-card">
                        <i class="fas fa-list"></i>
                        <p style="text-shadow:2px 2px 3px grey">Create and manage your tasks</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <i class="fas fa-calendar-check"></i>
                        <p style="text-shadow:2px 2px 3px grey">Set deadlines and priorities</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <i class="fas fa-eye"></i>
                        <p style="text-shadow:2px 2px 3px grey">Track your progress and stay motivated</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="call-to-action">
        <a href="#" class="btn btn-outline-dark">Get Started</a>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>

 

   

